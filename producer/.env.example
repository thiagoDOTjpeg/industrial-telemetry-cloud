# ===========================================
# Edge Device Producer - Environment Variables
# ===========================================

# AWS Configuration
# -----------------
# AWS region for the SQS service
AWS_REGION="us-east-1"

# LocalStack endpoint URL (use http://localhost:4566 for local development)
ENDPOINT_URL="http://localhost:4566"

# SQS Queue Configuration
# -----------------------
# Full URL of the SQS queue to send telemetry data
QUEUE_URL="http://sqs.us-east-1.localhost.localstack.cloud:4566/000000000000/dev-industrial-telemetry-queue"

# Simulation Settings
# -------------------
# Interval in seconds between each batch of telemetry messages
SIMULATION_INTERVAL_SECONDS="2"

# Number of telemetry messages to send per batch
BATCH_SIZE="1"

# Retry Configuration
# -------------------
# Maximum number of retry attempts for failed SQS requests
MAX_RETRIES="3"

# Base delay in seconds for exponential backoff retry strategy
BASE_DELAY_SECONDS="1.0"